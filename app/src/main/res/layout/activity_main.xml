<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ashu.insertdata.MainActivity">


    <EditText
        android:id="@+id/rollNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="58dp"
        android:ems="10"
        android:hint="Roll No"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/rollNo"
        android:layout_alignRight="@+id/rollNo"
        android:layout_below="@+id/rollNo"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/branch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/name"
        android:layout_alignStart="@+id/name"
        android:layout_centerVertical="true"
        android:ems="10"
        android:hint="Branch"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/shift"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/branch"
        android:layout_alignRight="@+id/branch"
        android:layout_below="@+id/branch"
        android:layout_marginTop="44dp"
        android:ems="10"
        android:hint="Shift"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/insertButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shift"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:onClick="insertClicked"
        android:text="Insert" />
</RelativeLayout>